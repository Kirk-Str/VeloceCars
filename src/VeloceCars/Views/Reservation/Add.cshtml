@model VeloceCars.Models.ReservationModels.ReservationViewModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add Reservation</h2>

<form asp-action="Add">
    <div class="form-horizontal">
        <h4>Add new reservation</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-5">
                <div class="form-group">
                    <input asp-for="ApplicationUserId" type="hidden" />
                    <label asp-for="ApplicationUser" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="ApplicationUser" readonly="readonly" class="form-control" />
                        <span asp-validation-for="ApplicationUser" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PackageId" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <select asp-for="PackageId" asp-items="Model.PackageList" class="form-control"></select>
                        <span asp-validation-for="PackageId" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="StartDateTime" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="StartDateTime" class="form-control" />
                        <span asp-validation-for="StartDateTime" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EndDateTime" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="EndDateTime" class="form-control" />
                        <span asp-validation-for="EndDateTime" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Request" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <textarea asp-for="Request" placeholder="Pickup location or convenient time" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Request" class="text-danger" />
                    </div>
                </div>
            </div> 
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="col-md-12 col-md-offset-4">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-info" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

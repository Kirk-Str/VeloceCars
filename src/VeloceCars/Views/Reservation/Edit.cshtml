@model VeloceCars.Models.ReservationModels.ReservationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Reservation</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="ApplicationUser" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ApplicationUser" readonly="readonly" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PackageId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PackageId" asp-items="Model.PackageList" class="form-control"></select>
                <span asp-validation-for="PackageId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartDateTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EndDateTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EndDateTime" class="form-control" />
                <span asp-validation-for="EndDateTime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Request" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Request" placeholder="Pickup location or convenient time" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Request" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

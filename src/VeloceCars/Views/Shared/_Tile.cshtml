@model VeloceCars.Models.PackageViewModels.PackageListViewModel

@{ 
    var renderedImage = "";
    @if (Model.Image != null)
    {
        var base64 = Convert.ToBase64String(Model.Image);
        renderedImage = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="col-sm-6 col-md-4">
        <div class="thumbnail">

            <div class="caption">
                <h3>
                    <a href="#" title=@Model.PackageName>@Model.PackageName</a>
                </h3>
            </div>

            <div>
                <img class="img-thumbnail" src="@renderedImage" alt="Package Image">
            </div>

            <h4>Rate per day: @Model.Price &euro;</h4>
            <p>Scheme: @Model.Route</p>

        </div>
</div>
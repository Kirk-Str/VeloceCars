@model VeloceCars.Models.Package

@{
    ViewData["Title"] = "Add Package";
}

<h2>Add Package</h2>

<form asp-action="Add" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Add new package</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PackageName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PackageName" class="form-control" />
                <span asp-validation-for="PackageName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Route" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Route" class="form-control" rows="10"></textarea>
                <span asp-validation-for="Route" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="image" type="file" name="image" data-show-preview="true" />
                <label for="image" class="upload-file .btn-success">Upload Image</label>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>


    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

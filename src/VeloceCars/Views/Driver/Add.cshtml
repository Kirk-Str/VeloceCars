@model VeloceCars.Models.DriverViewModels.DriverViewModel

@{
    ViewData["Title"] = "Add Driver";
}

<h2>Add Driver</h2>

<form asp-action="Add">
    <div class="form-horizontal">
        <h4>Add new driver</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ApplicationUserId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ApplicationUserId" asp-items="Model.ApplicationUserList" class="form-control"></select>
                <span asp-validation-for="ApplicationUserId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VehicleId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="VehicleId" asp-items="Model.VehicleList" class="form-control"></select>
                <span asp-validation-for="VehicleId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
